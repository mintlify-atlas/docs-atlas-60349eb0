  "keyFeatures": [
    "Domain-Driven Design architecture with modular business domains",
    "Multi-authentication support (Entra ID SSO, Access Tokens, Email verification)",
    "Role-based access control with fine-grained permissions",
    "Comprehensive API with access token management and CIDR restrictions",
    "Full audit trail for model changes and user actions",
    "Northwestern Directory integration with JIT user provisioning",
    "EventHub integration for event publishing and webhooks",
    "Pre-built Filament admin panels with Northwestern branding",
    "Database snapshots and rebuild utilities for local development",
    "Health checks and monitoring dashboards",
    "Parallelized testing with PHPUnit and Cypress",
    "CI/CD ready with GitHub Actions workflows"
  ],
  "publicApiSurface": [
    "GET /api/v1/me - Get authenticated user profile",
    "GET /api/v1/me/tokens - List user's access tokens",
    "POST /api/v1/me/tokens - Create new access token",
    "GET /api/v1/me/tokens/{token} - Get access token details",
    "DELETE /api/v1/me/tokens/{token} - Revoke access token",
    "GET /api/health - Health check endpoint",
    "POST /api/eventhub/netid-update - EventHub NetID update webhook",
    "php artisan starter:check - Validate starter configuration",
    "php artisan db:rebuild - Rebuild database with fresh data",
    "php artisan starter:changelog - Generate changelog from commits",
    "php artisan access-tokens:send-expiration-notifications - Send token expiration emails",
    "php artisan config:validate - Validate environment configuration",
    "App\\Domains\\Auth\\Actions\\Api\\IssueAccessToken - Issue new API access token",
    "App\\Domains\\Auth\\Actions\\Impersonation\\StartImpersonation - Start user impersonation",
    "App\\Domains\\User\\Actions\\CreateOrUpdateUserFromDirectory - Sync user from Northwestern Directory"
  ]
